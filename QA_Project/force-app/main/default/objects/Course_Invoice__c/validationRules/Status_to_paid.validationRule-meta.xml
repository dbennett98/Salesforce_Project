<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Status_to_paid</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISBLANK( Paid_Date__c ) , (TEXT(Status__c)=&quot;Paid&quot; ))</errorConditionFormula>
    <errorDisplayField>Status__c</errorDisplayField>
    <errorMessage>Please enter a Paid date to change the status to paid</errorMessage>
</ValidationRule>
